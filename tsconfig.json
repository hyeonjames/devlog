{
    "compilerOptions" : {
        "experimentalDecorators": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "module": "esnext",
        "typeRoots" : ["node_modules/@types", "node_modules/@blueprintjs"],
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include" : [
        "./src/**/*.*"
    ],
    "exclude" : [
        "node_modules",
        "**/*.spec.ts"
    ]
}